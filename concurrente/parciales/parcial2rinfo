programa ejemplo
procesos
  proceso juntarPapeles (ES pap:numero; ES cantE:numero)
  comenzar
    si (HayPapelEnLaEsquina)
      mientras(HayPapelEnLaEsquina)
        tomarPapel
        pap:=pap +1
      cantE:= cantE +1
  fin
  proceso depositarPapeles (E pap:numero)
  variables
    av,ca:numero
  comenzar
    av:=PosAv
    ca:=PosCa
    BloquearEsquina(99,99)
    Pos(99,99)
    repetir pap
      depositarPapel
    Pos(av,ca)
    LiberarEsquina(99,99)
  fin
  proceso escalon (E alto:numero; E ancho:numero; ES cantE:numero; ES papT:numero)
  variables
    pap:numero
  comenzar
    pap:=0
    papT:=0
    repetir alto
      juntarPapeles(pap,cantE)
      mover
    derecha
    papT:= papT +pap
    depositarPapeles(pap)
    pap:=0
    repetir ancho
      juntarPapeles(pap,cantE)
      mover
    depositarPapeles(pap)
    repetir 3
      derecha
    papT:= papT + pap
  fin
  proceso enviarComienzo
  comenzar
    EnviarMensaje(V,F1)
    EnviarMensaje(V,F2)
    EnviarMensaje(V,F3)
  fin
areas
  deposito: AreaC (99,99,99,99)
  areaF: AreaP (1,1,1,1)
  area1: AreaP (2,1,31,100)
  area2: AreaP (32,1,61,100)
  area3: AreaP (62,1,98,100)
robots
  robot florero
  variables
    cantE,alto,ancho, papT: numero
    hacer:boolean
  comenzar
    cantE:=0
    repetir 4
      Random(alto,1,3)
      Random(ancho,2,4)
      RecibirMensaje(hacer,fisca)
      escalon(alto,ancho,cantE,papT)
      EnviarMensaje(papT,fisca)
    EnviarMensaje(cantE,fisca)
  fin
  robot fiscalizador
  variables
    id,cantE,totP,pap,aux,quees:numero
  comenzar
    totP:=0
    cantE:=0
    repetir 4
      enviarComienzo
      repetir 3
        RecibirMensaje(pap,*)
        totP:= totP +pap
    repetir 3
      RecibirMensaje(aux, *)
      cantE:= cantE + aux
    Pos(99,99)
    repetir totP
      tomarPapel
    Pos(1,1)
    Informar('cant es', cantE)  
  fin
variables
  fisca: fiscalizador
  F1:  florero
  F2: florero
  F3: florero
comenzar
  AsignarArea(fisca,areaF)
  AsignarArea(fisca,deposito)
  AsignarArea(F1, area1)
  AsignarArea(F1,deposito)
  AsignarArea(F2, area2)
  AsignarArea(F2,deposito)
  AsignarArea(F3, area3)
  AsignarArea(F3,deposito)
  Iniciar(fisca, 1,1)
  Iniciar(F1,2,1)
  Iniciar(F2,32,1)
  Iniciar(F3,62,1)
fin