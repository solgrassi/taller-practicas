procedure cargarA (var a:arbol1);
var
p:prestamo; isbn: integer;
begin
    writeln('ingrese el ISB del libro');
    readln(isbn);
    while (isbn <> 0) do begin
        leerp(p);
        agregarele (a,isbn,p);
        writeln('ingrese el ISB del libro');
        readln(isbn);
    end;
end;
